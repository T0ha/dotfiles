set header_cache = "~/.cache/mutt"
set imap_keepalive = 300
unset imap_passive
set mail_check = 60
source "~/.mutt/gmail"
folder-hook $folder 'source ~/.mutt/gmail'
## source "~/.mutt/tcobdd"
## folder-hook $folder 'source ~/.mutt/tcobdd'

source "~/.mutt/theme.mutt"
set editor = vim
set sort = threads
set sort_aux = reverse-last-date-received
set query_command = "goobook query '%s'"

# Index setup
bind index gg first-entry
bind index G last-entry
bind index <space> collapse-thread
macro index \Cr "T~U<enter><tag-prefix><clear-flag>N<untag-pattern>.<enter>" "Mark all read"

# Pager setup
set pager_index_lines = 10
set pager_context = 3
set pager_stop
set menu_scroll
unset markers

bind pager k previous-line
bind pager j next-line
bind pager gg top
bind pager G bottom
